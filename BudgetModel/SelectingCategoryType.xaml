<Window x:Class="BudgetModel.SelectingCategoryType"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgetModel"
        mc:Ignorable="d"
        Title="SelectingCategoryType" Height="190" Width="280">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Category Type:" FontWeight="Bold" Margin="0,0,0,5"/>

        <!-- Radio buttons -->
        <StackPanel Grid.Row="1" x:Name="CategoryTypeRadioPanel" Orientation="Vertical" Margin="0,0,0,10">
            <RadioButton Content="Income" GroupName="CategoryType" Tag="1" Checked="CategoryTypeRadio_Checked" />
            <RadioButton Content="Expense" GroupName="CategoryType" Tag="2" Checked="CategoryTypeRadio_Checked" />
            <RadioButton Content="Credit" GroupName="CategoryType" Tag="3" Checked="CategoryTypeRadio_Checked" />
            <RadioButton Content="Savings" GroupName="CategoryType" Tag="4" Checked="CategoryTypeRadio_Checked" />
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Confirm" Width="120" Height="35" Margin="0,0,10,0" Click="AddCategoryType"/>
            <Button Content="Cancel" Width="120" Height="35" Click="OnCancelClick"/>
        </StackPanel>
    </Grid>
</Window>
