<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Theme color definitions -->
    <Color x:Key="BackgroundColor">#FF302C38</Color>    <!-- Muted lavender background -->
    <Color x:Key="TextColor">#FFF7F1FB</Color>    <!-- Light lavender-pink text color -->
    <Color x:Key="AccentColor">#FF8E63B5</Color>    <!-- Deep purple accent color -->

    <!-- SolidColorBrush resources based on the theme colors -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}" />
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}" />
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />

    <!-- Default Window style that sets the foreground (text) color -->
    <Style TargetType="Window">
        <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
    </Style>

    <!-- Style applied to all Button controls -->
    <Style TargetType="Button">
        <Setter Property="Background" Value="{StaticResource AccentBrush}" />        <!-- Background uses deep purple accent -->
        <Setter Property="Foreground" Value="{StaticResource TextBrush}" />        <!-- Text color from theme -->
        <Setter Property="Padding" Value="8,4" />        <!-- Internal spacing -->
        <Setter Property="Margin" Value="0,4" />        <!-- External vertical spacing -->
        <Setter Property="BorderThickness" Value="0" />        <!-- No visible border -->
        <Setter Property="FontWeight" Value="SemiBold" />        <!-- Bold button text -->
    </Style>

    <!-- Style applied to all TextBox controls -->
    <Style TargetType="TextBox">
        <Setter Property="Background" Value="#FF3E384C" />        <!-- Dark, soft lavender input background -->
        <Setter Property="Foreground" Value="{StaticResource TextBrush}" />        <!-- Input text color from theme -->
        <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}" />        <!-- Border using accent color -->
        <Setter Property="BorderThickness" Value="1" />        <!-- Thin border line -->
        <Setter Property="Margin" Value="0,4" />        <!-- Spacing between fields -->
        <Setter Property="Padding" Value="4" />        <!-- Internal padding for text input -->
    </Style>

    <!-- Ensure text elements use the correct themed text color -->
    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
    </Style>

    <Style TargetType="CheckBox">
        <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
    </Style>

    <Style TargetType="ComboBox">
        <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
    </Style>

</ResourceDictionary>