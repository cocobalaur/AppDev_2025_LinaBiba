<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Theme color definitions -->
    <Color x:Key="BackgroundColor">#FF2E2B30</Color>    <!-- Dark mauve background color -->
    <Color x:Key="TextColor">#BC9DA2</Color>    <!-- Soft pinkish-white text color -->
    <Color x:Key="AccentColor">#FFBC6C86</Color>    <!-- Dusty rose accent color -->

    <!-- SolidColorBrush resources based on defined theme colors -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}" />
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}" />
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />

    <!-- Window style applying default foreground text color -->
    <Style TargetType="Window">
        <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
        <Setter Property="Background" Value="{StaticResource BackgroundBrush}" />
    </Style>

    <!-- Style applied to all Button elements -->
    <Style TargetType="Button">
        <Setter Property="Background" Value="{StaticResource AccentBrush}" />
        <!-- Button background uses accent color -->
        <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
        <!-- Button text uses light theme color -->
        <Setter Property="Padding" Value="8,4" />
        <!-- Internal content spacing -->
        <Setter Property="Margin" Value="0,4" />
        <!-- Vertical spacing between buttons -->
        <Setter Property="BorderThickness" Value="0" />
        <!-- No visible border -->
        <Setter Property="FontWeight" Value="SemiBold" />
        <!-- Medium-bold font weight for emphasis -->
    </Style>

    <!-- Style applied to all TextBox elements -->
    <Style TargetType="TextBox">
        <Setter Property="Background" Value="#FF3D3842" />
        <!-- Dark purple-gray input background -->
        <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
        <!-- Text uses theme's light foreground -->
        <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}" />
        <!-- Border highlights with accent color -->
        <Setter Property="BorderThickness" Value="1" />
        <!-- Thin border for subtle framing -->
        <Setter Property="Margin" Value="0,4" />
        <!-- Spacing between text fields -->
        <Setter Property="Padding" Value="4" />
        <!-- Internal padding for input content -->
    </Style>

    <!-- TextBlock style -->
    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
    </Style>

    <!-- CheckBox style -->
    <Style TargetType="CheckBox">
        <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
    </Style>


</ResourceDictionary>