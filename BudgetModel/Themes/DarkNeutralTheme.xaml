<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Theme color definitions -->
    <Color x:Key="BackgroundColor">#FF1E1B1A</Color>    <!-- Dark gray-brown background color -->
    <Color x:Key="TextColor">#BF9E91</Color>    <!-- Soft off-white for high contrast text -->
    <Color x:Key="AccentColor">#4D3126</Color>    <!-- Muted caramel-gold for accent elements -->

    <!-- SolidColorBrush resources derived from the above colors -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}" />
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}" />
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />

    <!-- Style applied to the Window element -->
    <Style TargetType="Window">
        <!-- Sets the default foreground (text color) for content inside the window -->
        <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
    </Style>

    <!-- Style applied to all Button elements -->
    <Style TargetType="Button">
        <Setter Property="Background" Value="{StaticResource AccentBrush}" />        <!-- Button background uses accent color -->
        <Setter Property="Foreground" Value="{StaticResource TextBrush}" />        <!-- Button text uses main text color -->
        <Setter Property="FontWeight" Value="SemiBold" />        <!-- Slightly bold button text -->
        <Setter Property="Padding" Value="8,4" />        <!-- Internal spacing for content -->
        <Setter Property="Margin" Value="0,4" />        <!-- Vertical spacing between buttons -->
        <Setter Property="BorderThickness" Value="0" />        <!-- No border outline -->
        <Setter Property="Cursor" Value="Hand" />        <!-- Cursor changes to hand on hover -->
    </Style>

    <!-- Style applied to all TextBox elements -->
    <Style TargetType="TextBox">
        <Setter Property="Background" Value="#FF2B2624" />        <!-- Slightly lighter brown for input fields -->
        <Setter Property="Foreground" Value="{StaticResource TextBrush}" />        <!-- Input text color -->
        <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}" />        <!-- Border uses accent color -->
        <Setter Property="BorderThickness" Value="1" />        <!-- Thin border line -->
        <Setter Property="Padding" Value="4" />        <!-- Internal padding inside the TextBox -->
        <Setter Property="Margin" Value="0,4" />        <!-- Spacing between form controls -->
    </Style>

    <!-- Ensure text elements use the correct themed text color -->
    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
    </Style>

    <Style TargetType="CheckBox">
        <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
    </Style>

    <Style TargetType="ComboBox">
        <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
    </Style>

</ResourceDictionary>