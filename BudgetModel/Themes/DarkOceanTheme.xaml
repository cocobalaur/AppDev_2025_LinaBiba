<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Theme color definitions -->
    <Color x:Key="BackgroundColor">#FF1A2B2E</Color>    <!-- Deep ocean background -->
    <Color x:Key="TextColor">#8BC8E3</Color>    <!-- Light aqua text color -->
    <Color x:Key="AccentColor">#FF397D8B</Color>    <!-- Soft sea blue accent -->

    <!-- Brushes derived from the theme colors -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}" />
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}" />
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />

    <!-- Style for Window elements applying the text color and background -->
    <Style TargetType="Window">
        <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
        <Setter Property="Background" Value="{StaticResource BackgroundBrush}" />
    </Style>

    <!-- Style for Button elements -->
    <Style TargetType="Button">
        <Setter Property="Background" Value="{StaticResource AccentBrush}" />
        <!-- Uses accent as background -->
        <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
        <!-- Text uses theme color -->
        <Setter Property="Padding" Value="8,4" />
        <!-- Inner spacing -->
        <Setter Property="Margin" Value="0,4" />
        <!-- External spacing -->
        <Setter Property="BorderThickness" Value="0" />
        <!-- No border outline -->
        <Setter Property="FontWeight" Value="SemiBold" />
        <!-- Medium-bold text -->
    </Style>

    <!-- Style for TextBox elements -->
    <Style TargetType="TextBox">
        <Setter Property="Background" Value="#FF2C4044" />
        <!-- Dark teal background -->
        <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
        <!-- Light text color -->
        <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}" />
        <!-- Border uses accent color -->
        <Setter Property="BorderThickness" Value="1" />
        <!-- Thin border -->
        <Setter Property="Margin" Value="0,4" />
        <!-- Spacing between controls -->
        <Setter Property="Padding" Value="4" />
        <!-- Inner padding -->
    </Style>

    <!-- Style for TextBlock elements -->
    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
    </Style>

    <!-- Style for CheckBox elements -->
    <Style TargetType="CheckBox">
        <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
    </Style>

</ResourceDictionary>


