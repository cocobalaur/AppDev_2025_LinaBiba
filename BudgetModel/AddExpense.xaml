<Window x:Class="BudgetModel.AddExpense"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgetModel"
        mc:Ignorable="d"
        Title="AddExpense" Height="460" Width="424" WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Add Expense"
                   FontSize="20"
                   FontWeight="Bold"
                   HorizontalAlignment="Left"
                   Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Left">

            <!-- Expense Name -->
            <StackPanel Margin="0,0,0,10">
                <Label Content="Expense Name:"/>
                <TextBox x:Name="ExpenseNameTextBox" Width="250"/>
            </StackPanel>

            <!-- Amount -->
            <StackPanel Margin="0,0,0,10">
                <Label Content="Amount:"/>
                <TextBox x:Name="ExpenseAmountTextBox" Width="250"/>
            </StackPanel>

            <!-- Category -->
            <StackPanel Margin="0,0,0,10">
                <Label Content="Category:"/>
                <ComboBox x:Name="CategoryComboBox"
                          Width="250"
                          IsEditable="True"
                          IsTextSearchEnabled="False"
                          StaysOpenOnEdit="True"
                          DropDownClosed="CategoryComboBox_DropDownClosed"/>
            </StackPanel>

            <!-- Date -->
            <StackPanel Margin="0,0,0,10">
                <Label Content="Date:"/>
                <DatePicker x:Name="ExpenseDatePicker" Width="250"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button Content="Add Expense" Width="120" Height="35" Margin="0,0,10,0" Click="AddExpenseClick"/>
                <Button Content="Add Category" Width="120" Height="35" Margin="0,0,10,0" Click="AddCategory_Click"/>
                <Button Content="Cancel" Width="120" Height="35" Click="OnCancelClick"/>
            </StackPanel>

            <!-- Buttons -->
        </StackPanel>
    </Grid>
</Window>
