<Window x:Class="BudgetModel.AddExpense"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgetModel"
        mc:Ignorable="d"
        Title="AddExpense" Height="450" Width="800">
    <Grid Margin="10">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1.5*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,20,0">

            <TextBlock Text="Add Expense" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" />

            <StackPanel Margin="0,0,0,10">
                <Label Content="Expense Name:" />
                <TextBox x:Name="ExpenseNameTextBox" Width="250" />
            </StackPanel>

            <StackPanel Margin="0,0,0,10">
                <Label Content="Amount:" />
                <TextBox x:Name="ExpenseAmountTextBox" Width="250" />
            </StackPanel>

            <StackPanel Margin="0,0,0,10">
                <Label Content="Category:" />
                <ComboBox x:Name="CategoryComboBox"
                   IsEditable="True"
                   IsTextSearchEnabled="False"
                   StaysOpenOnEdit="True"
                   Width="250"
                   DropDownClosed="CategoryComboBox_DropDownClosed" />
            </StackPanel>

            <StackPanel Margin="0,0,0,10">
                <Label Content="Date:" />
                <DatePicker x:Name="ExpenseDatePicker" Width="250" />
            </StackPanel>


            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="Add Expense" Width="120" Height="35" Margin="0,0,10,0" Click="AddExpenseClick" />
                <Button Content="Add Category" Width="120" Height="35" Margin="0,0,10,0" Click="AddCategory_Click" />
                <Button Content="Cancel" Width="120" Height="35" Click="OnCancelClick" />
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
