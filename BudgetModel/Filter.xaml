<Window x:Class="BudgetModel.Filter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgetModel"
        mc:Ignorable="d"
        Title="Filter" Height="479" Width="1002" >
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel: All Options -->
        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10">

                <!-- Filter Section -->
                <TextBlock Text="Display Options" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                <TextBlock Text="Filter" FontWeight="Bold"/>

                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <TextBlock Text="Start Date" Width="80"/>
                    <DatePicker x:Name="StartDatePicker" SelectedDate="2014-04-25" SelectedDateChanged="OnDateChanged"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <TextBlock Text="End Date" Width="80"/>
                    <DatePicker x:Name="EndDatePicker" SelectedDate="2019-04-25" SelectedDateChanged="OnDateChanged"/>
                </StackPanel>


                <!-- Category Filter -->

                <CheckBox x:Name="FilterByCategory" 
                   Content="Filter By Category?" 
                   Margin="0,10,0,5" 
                   Checked="OnFilterChanged" 
                   Unchecked="OnFilterChanged" />

                <ComboBox x:Name="CategoryComboBox" 
                      Width="200" 
                      Height="25"
                      SelectionChanged="OnFilterChanged" />

                <!-- Summary Options -->
                <GroupBox Header="Summary" Margin="0,20,0,0">
                    <StackPanel>
                        <CheckBox x:Name="ByMonthCheckBox" Content="By Month" Margin="5"
                         Checked="SummaryCheckbox_Changed" Unchecked="SummaryCheckbox_Changed"/>
                        <CheckBox x:Name="ByCategoryCheckBox" Content="By Category" Margin="5"
                         Checked="SummaryCheckbox_Changed" Unchecked="SummaryCheckbox_Changed"/>

                    </StackPanel>
                </GroupBox>

                <!-- View Mode Toggle -->
                <TextBlock Text="View Mode" FontWeight="Bold" Margin="0,15,0,5"/>
                <ComboBox x:Name="ViewModeSelector" Width="200" SelectionChanged="ViewModeSelector_Changed">
                    <ComboBoxItem Content="Data Grid" IsSelected="True"/>
                    <ComboBoxItem Content="Pie Chart"/>
                </ComboBox>
                
                <Button Content="Add Expense" Width="200" Margin="0,20,0,10" Click="AddExpense_Click"/>

                <!-- Theme Settings -->
                <Separator Margin="0,20,0,10"/>
                <TextBlock Text="Theme Settings" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                <TextBlock Text="Select a Theme Style:" FontWeight="Bold" Margin="0,0,0,5"/>
                <ComboBox x:Name="ColorComboBox" Width="200" Margin="0,0,0,10">
                    <ComboBoxItem Content="Light"/>
                    <ComboBoxItem Content="Blush"/>
                    <ComboBoxItem Content="Ocean"/>
                    <ComboBoxItem Content="Lavender"/>
                </ComboBox>

                <CheckBox x:Name="DarkModeCheckBox" Content="Dark Mode" Margin="0,0,0,10"/>
                <Button Content="Apply Theme" Width="150" Height="35" Click="ApplyTheme_Click" Margin="0,0,0,20"/>

                <TextBox Width="200" Height="30" Text="Try typing here!" Margin="0,0,0,10"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Right Panel: DataGrid -->
        <Grid Grid.Column="1" Margin="10,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Search bar -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5" HorizontalAlignment="Right">
                <TextBox x:Name="SearchTextBox" Width="200" Margin="5"/>
                <Button Content="Search" Click="SearchButton_Click"/>
                <TextBlock x:Name="NoResultLabel"
                           Text=""
                           Visibility="Collapsed"
                           Foreground="Red"
                           FontSize="12"
                           Margin="5,0,0,5"
                           FontStyle="Italic"/>

            </StackPanel>

            <!-- Expense Table -->
            <Grid Grid.Row="1">
                <!-- Pie Chart -->
                <local:ChartView x:Name="MyChartControl" Visibility="Collapsed" />

                <!-- Data Grid -->
                <DataGrid x:Name="ExpenseDataGrid"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserAddRows="False"
                          HeadersVisibility="Column"
                          Visibility="Visible"
                          MouseDoubleClick="ExenseDataGrid_MouseDoubleClick"
                          MouseRightButtonDown="ExpenseDataGrid_MouseRightButtonDown">
                    <DataGrid.ContextMenu>
                        <ContextMenu x:Name="ExpenseContentMenu">
                            <MenuItem Header="Update" Click="UpdateMenuItem_Click"/>
                            <MenuItem Header="Delete" Click="DeleteMenuItem_Click"/>
                            <MenuItem Header="Cancel"/>
                        </ContextMenu>
                    </DataGrid.ContextMenu>
                </DataGrid>

            </Grid>
        </Grid>
    </Grid>
</Window>