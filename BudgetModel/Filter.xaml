<Window x:Class="BudgetModel.Filter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgetModel"
        mc:Ignorable="d"
        Title="Filter" Height="450" Width="800">
    <Grid Margin="234,10,10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="ExpenseDataGrid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True"
                  CanUserAddRows="False" HeadersVisibility="Column" Margin="0,10,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Date" Binding="{Binding Date}" Width="*" />
                <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="*" />
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="2*" />
                <DataGridTextColumn Header="Amount" Binding="{Binding Amount}" Width="*" />
                <DataGridTextColumn Header="Balance" Binding="{Binding Balance}" Width="*" />
            </DataGrid.Columns>


        </DataGrid>
        <!-- Right Side: Theme and Create Category Section -->
        <StackPanel Grid.Row="1" VerticalAlignment="Top" Margin="-245,188,528,0">

            <TextBlock Text="Theme Settings" FontSize="18" FontWeight="Bold" Width="249" />

            <TextBlock x:Name="ThemeTitle"
    Text="Select a Theme Style:" 
    FontSize="16" 
    FontWeight="Bold" 
    Margin="0 0 0 10" 
    Height="31" 
    Width="172" />

            <ComboBox x:Name="ColorComboBox" Width="200" Margin="0,0,0,10">
                <ComboBoxItem Content="Light" />
                <ComboBoxItem Content="Blush" />
                <ComboBoxItem Content="Ocean" />
                <ComboBoxItem Content="Lavender" />
            </ComboBox>

            <CheckBox x:Name="DarkModeCheckBox" Content="Dark Mode" Margin="0,0,0,20" />

            <Button Content="Apply Theme" Width="150" Height="35" Margin="0,0,0,20" Click="ApplyTheme_Click" />

            <TextBox Width="200" Height="30" Text="Try typing here!" Margin="0,0,0,20" />

            <Separator Margin="0,10,0,10" />

        </StackPanel>


    </Grid>


</Window>
