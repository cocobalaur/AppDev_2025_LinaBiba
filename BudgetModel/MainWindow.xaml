<Window x:Class="BudgetModel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgetModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid Margin="10">
        <!-- Root grid with 3 rows: Theme, File Input, Add Expense -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Margin="568,2,0,0" VerticalAlignment="Top" HorizontalAlignment="Left">

            <!-- Theme style label -->
            <TextBlock x:Name="ThemeLabel"
                       Text="Select a Theme Style:"
                       FontSize="16"
                       FontWeight="Bold"
                       Margin="0 0 0 10" />

            <!-- Theme options dropdown -->
            <ComboBox x:Name="ColorComboBox"
                      Width="200"
                      Margin="0 0 0 10">
                <ComboBoxItem Content="Light" />
                <ComboBoxItem Content="Blush" />
                <ComboBoxItem Content="Ocean" />
                <ComboBoxItem Content="Lavender" />
            </ComboBox>

            <!-- Dark mode checkbox -->
            <CheckBox x:Name="DarkModeCheckBox"
                      Content="Dark Mode"
                      Margin="0 0 0 20"
                      Foreground="{DynamicResource TextBrush}" />

            <!-- Apply theme button -->
            <Button Content="Apply Theme"
                    Width="120"
                    Click="ApplyTheme_Click"
                    Margin="0 10 0 10" />

            <!-- Sample input box -->
            <TextBox Width="200"
                     Height="30"
                     Text="Try typing here!" />
        </StackPanel>


        <!-- File Selection Area -->
        <Grid Margin="5,8,-5,36">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Enter Database File Name:"/>
            <TextBox x:Name="FileNameTextBox" Grid.Row="1" Margin="0,5,1000,10"/>

            <StackPanel Grid.Row="2" Orientation="Horizontal">
                <TextBox x:Name="DirectoryTextBox" Width="250"/>
                <Button Content="Browse..." Margin="5,0,0,0" Click="BrowseDirectory_Click"/>
            </StackPanel>

            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="left" Margin="0,15,0,0">
                <Button Content="OK" Width="80" Click="Ok_Click"/>
            </StackPanel>

        </Grid>


    </Grid>

</Window>
