<Window x:Class="BudgetModel.AddCategory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgetModel"
        mc:Ignorable="d"
        Title="AddCategory" Height="370" Width="405" MinHeight="260" MaxHeight="380" MaxWidth="420" MinWidth="270"> 
    <Grid Margin="10">

        <StackPanel>
        <TextBlock Text="Create New Category" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" />

        <TextBlock Text="Category Name:" Margin="0,5,0,5" />
        <TextBox x:Name="NewCategoryNameBox" Width="200" Margin="0,0,0,10" />

        <TextBlock Text="Category Type:" Margin="0,5,0,5" />
        <ComboBox x:Name="NewCategoryTypeBox" Width="200" Margin="0,0,0,10">
            <ComboBoxItem Content="Expense" />
            <ComboBoxItem Content="Income" />
            <ComboBoxItem Content="Credit" />
            <ComboBoxItem Content="Savings" />
        </ComboBox>

        <Button Content="Add Category" Width="150" Height="35" Click="AddCategoryButton_Click" />
        </StackPanel>
    </Grid>
</Window>
